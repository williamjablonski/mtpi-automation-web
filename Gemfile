source 'https://rubygems.org'

ruby '2.2.3'
# ruby-gemset=acdc2

# Base task gem to support ruby scripts
gem 'rake'

# Cucumber gem for ruby
gem 'cucumber'
# Ruby spec gem
gem 'rspec'
# Allows xml reports for rspec, important for ci pipeline
gem 'ci_reporter_rspec', require: false
# page object helpers to map the fields like assessors
gem 'page-object'
# Console with asteroids
gem 'pry'
# Debug feature, to use put in the line you want to have a break point:
# `binding.pry`
gem 'pry-byebug'
# can run the tests in headless mode, works only for linux
gem 'headless'
# Ruby static code analyzer
gem 'rubocop', require: false
# API Tests
gem 'rest-client'
#
# gem 'capybara'
